<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listCardFragment">

    <fragment
        android:id="@+id/listCardFragment"
        android:name="com.example.anki.fragments.ListCardFragment"
        android:label="fragment_list_card"
        tools:layout="@layout/fragment_list_card">
        <action
            android:id="@+id/action_listCardFragment_to_manageCardFragmentAdd"
            app:destination="@id/manageCardFragment">
            <argument
                android:name="cardId"
                app:argType="integer"
                android:defaultValue="-1" /> <!-- -1 для добавления новой карточки -->
        </action>
        <action
            android:id="@+id/action_listCardFragment_to_seeCardFragment"
            app:destination="@id/seeCardFragment">
            <argument
                android:name="cardId"
                app:argType="integer" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/seeCardFragment"
        android:name="com.example.anki.fragments.SeeCardFragment"
        android:label="fragment_see_card"
        tools:layout="@layout/fragment_see_card">
        <action
            android:id="@+id/action_seeCardFragment_to_manageCardFragmentEdit"
            app:destination="@id/manageCardFragment">
            <argument
                android:name="cardId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_seeCardFragment_to_listCardFragment"
            app:destination="@id/listCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/manageCardFragment"
        android:name="com.example.anki.fragments.ManageCardFragment"
        android:label="fragment_manage_card"
        tools:layout="@layout/fragment_manage_card">
        <action
            android:id="@+id/action_manageCardFragmentToSeeCardFragment"
            app:destination="@id/seeCardFragment">
            <argument
                android:name="cardId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_manageCardFragmentToListCardFragment"
            app:destination="@id/listCardFragment" />
    </fragment>
</navigation>
