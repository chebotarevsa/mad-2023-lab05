<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/card_margin">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/max_height"
        android:layout_height="@dimen/max_height"

        android:src="@drawable/icon"
        android:contentDescription="@string/textPlaceholder"/>

    <LinearLayout
        android:layout_width="@dimen/null_size"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/card_margin">

        <TextView
            android:id="@+id/textViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/translationField"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/textViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPlaceholder"
            android:textAppearance="?attr/textAppearanceCaption" />
    </LinearLayout>

    <ImageView
        android:id="@+id/deleter"
        android:layout_width="@dimen/width_height"
        android:layout_height="@dimen/width_height"
        android:padding="@dimen/card_margin"
        android:src="@drawable/delete"
        android:contentDescription="@string/textPlaceholder" />
</LinearLayout>
